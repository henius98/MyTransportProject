{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.NetCore": "Warning",
      "Microsoft.Extensions.Hosting": "Information",
      "GTFSRealtimeApp": "Debug",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    }
  },
  "LogFilePath": "./logs",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=C:\\sqlite\\DB\\GTFS_DB.db;Cache=Shared;Pooling=True;Mode=ReadWriteCreate;Journal Mode=WAL;Synchronous=Off;Temp Store=Memory;Foreign Keys=False;Locking Mode=Exclusive;Page Size=8192;Cache Size=100"
  },
  "GTFS_RealtimeAPI": {
    "Prasarana": {
      "RapidKL": "https://api.data.gov.my/gtfs-realtime/vehicle-position/prasarana?category=rapid-kl",
      "RapidPenang": "https://api.data.gov.my/gtfs-realtime/vehicle-position/prasarana?category=rapid-bus-penang"
    }
  },
  "AppSettings": {
    "PollingIntervalSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableHealthMonitoring": false
  }
}
