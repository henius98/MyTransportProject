{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Extensions.Hosting": "Information",
      "GTFSRealtimeApp": "Debug",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    },
    "FilePath": "./logs/gtfs-app.log"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=GTFSRealtimeApp;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "GTFS_RealtimeAPI": {
    "Prasarana": {
      "RapidKL": "https://api.data.gov.my/gtfs-realtime/vehicle-position/prasarana?category=rapid-kl",
      "RapidPenang": "https://api.data.gov.my/gtfs-realtime/vehicle-position/prasarana?category=rapid-bus-penang"
    }
  },
  "AppSettings": {
    "PollingIntervalMinutes": 2,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableHealthMonitoring": true,
    "SaveToDatabase": false,
    "OutputDirectory": "./GTFSData"
  }
}
